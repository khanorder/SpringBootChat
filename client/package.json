{
  "name": "client",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "npm run build:next && npm run build:server && node ./minify.js",
    "prebuild:next": "rimraf .next",
    "build:next": "cross-env NODE_ENV=production next build",
    "prebuild:server": "rimraf dist",
    "build:server": "cross-env NODE_ENV=production tsc -p tsconfig.server.json --skipLibCheck",
    "postbuild:server": "copyfiles package.json dist && copyfiles next.config.js dist && copyfiles -a public/**/* dist && copyfiles -a .next/**/* dist",
    "start": "cross-env NODE_ENV=production node --es-module-specifier-resolution=node dist/server.js",
    "lint": "next lint"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, pug, json, js",
    "ignore": [
      "src/public"
    ],
    "exec": "node --loader ts-node/esm ./src/server.ts"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@svgr/webpack": "^6.5.1",
    "@types/lodash": "^4.17.0",
    "base-x": "^4.0.0",
    "connected-next-router": "^5.0.0",
    "dayjs": "^1.11.10",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "lodash": "^4.17.21",
    "next": "13.5.6",
    "next-redux-saga": "^4.1.2",
    "next-redux-wrapper": "^7.0.5",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^7.2.9",
    "redux": "^4.2.1",
    "redux-saga": "^1.3.0",
    "sass": "^1.72.0",
    "ua-parser-js": "^1.0.37",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "13.5.6",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "uglify-js": "^3.17.4"
  }
}
