namespace springBootChat.domain;

enum PacketType:byte {
  NONE = 0,
  CREATE_CHAT_ROOM = 1,
  UPDATE_CHAT_ROOM = 2,
  ENTER_CHAT_ROOM = 3,
  EXIT_CHAT_ROOM = 4
}

enum CreateChatRoom:byte {
  NONE = 0,
  EXISTS_ROOM = 1,
  REQUIRED_ROOM_ID = 2
}

enum ExitChatRoom:byte {
  NONE = 0,
  ROOM_REMOVED = 1,
  NO_EXISTS_ROOM = 2,
  NOT_IN_ROOM = 3,
  FAILED_TO_EXIT = 4
}
 
table UpdateChatRoom {
  type:PacketType;
  room_ids:[byte];
  room_names:[string];
}

root_type UpdateChatRoom;